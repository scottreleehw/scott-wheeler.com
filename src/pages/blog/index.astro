---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blog" description="Thoughts, writeups, and notes from Scott Wheeler">
  <div class="container">
    <header class="page-header">
      <h1><span class="accent">#</span> Blog</h1>
      <p>Writeups, notes, and occasional thoughts.</p>
    </header>

    <ul class="post-list">
      {sortedPosts.map((post) => (
        <li class="post-item">
          <a href={`/blog/${post.slug}`}>
            <time class="mono">{post.data.date.toISOString().split('T')[0]}</time>
            <h2>{post.data.title}</h2>
            <p>{post.data.description}</p>
            {post.data.tags.length > 0 && (
              <div class="tags">
                {post.data.tags.map((tag: string) => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </a>
        </li>
      ))}
    </ul>

    {sortedPosts.length === 0 && (
      <p class="empty-state mono">No posts yet. Check back soon!</p>
    )}
  </div>
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 3rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--text-secondary);
    font-size: 1.1rem;
  }

  .post-list {
    list-style: none;
    display: grid;
    gap: 1rem;
  }

  .post-item a {
    display: block;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 4px;
    transition: border-color 0.2s ease, background 0.2s ease;
  }

  .post-item a:hover {
    border-color: var(--accent);
    background: var(--bg-tertiary);
  }

  .post-item time {
    display: block;
    color: var(--text-muted);
    font-size: 0.8rem;
    margin-bottom: 0.5rem;
  }

  .post-item h2 {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .post-item p {
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent-dim);
    background: var(--accent-glow);
    padding: 0.2em 0.6em;
    border-radius: 3px;
  }

  .empty-state {
    color: var(--text-muted);
    text-align: center;
    padding: 3rem;
  }
</style>
