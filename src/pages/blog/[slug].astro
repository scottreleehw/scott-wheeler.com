---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="container">
    <header class="article-header">
      <a href="/blog" class="back-link mono"><span class="accent">&lt;</span> blog</a>
      <time class="mono">{post.data.date.toISOString().split('T')[0]}</time>
      <h1>{post.data.title}</h1>
      {post.data.tags.length > 0 && (
        <div class="tags">
          {post.data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="content">
      <Content />
    </div>

    <footer class="article-footer">
      <a href="/blog" class="back-link mono"><span class="accent">&lt;</span> back to blog</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .article-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border);
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
    font-size: 0.9rem;
  }

  .back-link:hover {
    color: var(--accent);
  }

  time {
    display: block;
    color: var(--text-muted);
    font-size: 0.85rem;
    margin-bottom: 0.5rem;
  }

  h1 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--accent-dim);
    background: var(--accent-glow);
    padding: 0.2em 0.6em;
    border-radius: 3px;
  }

  .content {
    line-height: 1.8;
  }

  .content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .content :global(p) {
    margin-bottom: 1.25rem;
  }

  .content :global(ul), .content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(pre) {
    margin: 1.5rem 0;
  }

  .content :global(blockquote) {
    border-left: 3px solid var(--accent);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-secondary);
    font-style: italic;
  }

  .content :global(img) {
    max-width: 100%;
    border-radius: 4px;
    margin: 1.5rem 0;
  }

  .content :global(a) {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    font-size: 0.9rem;
  }

  .content :global(th),
  .content :global(td) {
    border: 1px solid var(--border);
    padding: 0.5rem 0.75rem;
    text-align: left;
  }

  .content :global(th) {
    background: var(--bg-secondary, rgba(255,255,255,0.05));
    font-weight: 600;
  }

  .content :global(tr:hover) {
    background: var(--bg-secondary, rgba(255,255,255,0.02));
  }

  .article-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border);
  }

  @media (max-width: 600px) {
    h1 {
      font-size: 1.75rem;
    }
  }
</style>
